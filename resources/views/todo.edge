<body>
    <div class="container mt-5">
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-center">Todo List</h1>
            @if(flashMessages.has('message') && flashMessages.has('status'))
                <div class="alert alert-{{ flashMessages.get('status') }}" role="alert">
                    {{ flashMessages.get('message') }}
                </div>
            @endif
            <a href="/tambah-data" class="btn btn-primary mb-2">Tambah Data</a>
            <div class="card">
              <div class="card-body">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                      <tr>
                          <th>No</th>
                          <th>Tugas</th>
                          <th>Deskripsi</th>
                          <th>Edit</th>
                          <th>Hapus</th>
                      </tr>
                  </thead>
                  <tbody>                      
                    @each((item,index) in all)
                    <tr>
                        <td>{{ index + 1 }}</td>
                        <td>{{ item.tugas }}</td>
                        <td>{{ item.deskripsi }}</td>
                        <td>
                            <a href="/tambah-data/{{ item.id }}" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <form action="/delete-data/{{ item.id }}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Hapus<button>
                            </form>
                        </td>
                    </tr>
                    @endeach
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
